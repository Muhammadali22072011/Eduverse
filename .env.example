# Основные настройки Flask
SECRET_KEY=your-super-secret-key-change-this-in-production
DEBUG=True
FLASK_ENV=development

# База данных
DATABASE_URL=sqlite:///eduverse.db
SQLALCHEMY_TRACK_MODIFICATIONS=False

# Socket.IO настройки
SOCKETIO_ASYNC_MODE=eventlet
SOCKETIO_CORS_ALLOWED_ORIGINS=*

# Безопасность
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Настройки загрузки файлов
MAX_CONTENT_LENGTH=16777216
UPLOAD_FOLDER=uploads
ALLOWED_EXTENSIONS=txt,pdf,doc,docx,ppt,pptx,xls,xlsx,jpg,jpeg,png,gif,mp4,avi,mov

# Настройки почты (для уведомлений)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Настройки логирования
LOG_LEVEL=INFO
LOG_FILE=logs/eduverse.log

# Настройки Redis (для кэширования и сессий)
REDIS_URL=redis://localhost:6379/0

# Настройки JWT (для API токенов)
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=86400

# Настройки CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Настройки пагинации
ITEMS_PER_PAGE=20

# Настройки уведомлений
NOTIFICATION_EMAIL=True
NOTIFICATION_SMS=False
NOTIFICATION_PUSH=False

# Настройки чата
CHAT_MESSAGE_LIMIT=1000
CHAT_FILE_SIZE_LIMIT=10485760
CHAT_HISTORY_DAYS=30

# Настройки расписания
SCHEDULE_UPDATE_INTERVAL=300
SCHEDULE_NOTIFICATION_LEAD_TIME=900

# Настройки оценок
GRADE_SCALE_MIN=1
GRADE_SCALE_MAX=10
GRADE_DECIMAL_PLACES=1

# Настройки платежей
PAYMENT_CURRENCY=RUB
PAYMENT_DUE_NOTIFICATION_DAYS=7
PAYMENT_OVERDUE_NOTIFICATION_DAYS=1

# Настройки резервного копирования
BACKUP_ENABLED=True
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=backups/

# Настройки мониторинга
HEALTH_CHECK_ENABLED=True
HEALTH_CHECK_INTERVAL=60
METRICS_ENABLED=True

# Настройки разработки
RELOAD_ON_CHANGE=True
PROFILER_ENABLED=False
DEBUG_TOOLBAR_ENABLED=False